<SidebarMenu>:
    orientation: 'vertical'
    size_hint_x: None
    width: dp(300)
    x: -self.width
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos

    Button:
        text: 'Home'
        size_hint_y: None
        height: dp(50)
        on_press: root.navigate_to('home')

    Button:
        text: 'Accounts'
        size_hint_y: None
        height: dp(50)
        on_press: root.navigate_to('account')

    Button:
        text: 'Family'
        size_hint_y: None
        height: dp(50)
        on_press: root.toggle_sidebar()

    Button:
        text: 'Charts'
        size_hint_y: None
        height: dp(50)
        on_press: root.toggle_sidebar()

    Button:
        text: 'Notifications'
        size_hint_y: None
        height: dp(50)
        on_press: root.toggle_sidebar()

    Button:
        text: 'Settings'
        size_hint_y: None
        height: dp(50)
        on_press: root.toggle_sidebar()

    Button:
        text: 'Help'
        size_hint_y: None
        height: dp(50)
        on_press: root.toggle_sidebar()

    Button:
        id: logout_button
        text: 'Logout'
        size_hint_y: None
        height: dp(50)
        background_color: 1, 0, 0, 1
        color: 1, 1, 1, 1
        on_release: root.logout()
