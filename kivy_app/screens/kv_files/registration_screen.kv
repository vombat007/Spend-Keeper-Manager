<RegistrationScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        padding: [30, 50]
        spacing: 15
        size_hint: None, None
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}


        Label:
            text: 'HI! \nCreate a \nNew account !'
            font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
            font_size: 30
            size_hint_y: None
            height: self.texture_size[1]
            color: 0, 0, 0, 1
            bold: True
            halign: 'center'

        BoxLayout:
            orientation: 'vertical'
            padding: [10, 40]
            spacing: 15
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}

            Label:
                id: error_label
                text: ''
                font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
                color: 1, 0, 0, 1
                size_hint_y: None
                height: self.texture_size[1]
                pos_hint: {'center_x': 0.5}

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 300, 50
            spacing: 5
            pos_hint: {'center_x': 0.5}

            Label:
                text: 'Email'
                font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
                size_hint_y: None
                height: 20
                halign: 'left'
                color: 0, 0, 0, 1
                text_size: self.size
                padding_x: 25  # Adjust padding to move text to the right

            TextInput:
                id: email_input
                hint_text: ''
                font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
                multiline: False
                size_hint_y: None
                height: 45
                padding_y: [10, 10]
                padding_x: [10, 10]
                font_size: 18
                background_normal: 'kivy_app/assets/img/Rectangle.png'
                background_active: 'kivy_app/assets/img/Rectangle.png'
                background_color: 0.95, 0.95, 0.95, 1
                foreground_color: 0, 0, 0, 1


        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 300, 70
            spacing: 5
            pos_hint: {'center_x': 0.5}

            Label:
                text: 'Password'
                font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
                size_hint_y: None
                height: 20
                color: 0, 0, 0, 1
                text_size: self.size
                padding_x: 25  # Adjust padding to move text to the right

            TextInput:
                id: password_input
                hint_text: ''
                font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
                password: True
                multiline: False
                size_hint_y: None
                height: 45
                padding_y: [10, 10]
                padding_x: [10, 10]
                font_size: 18
                background_normal: 'kivy_app/assets/img/Rectangle.png'
                background_active: 'kivy_app/assets/img/Rectangle.png'
                background_color: 0.95, 0.95, 0.95, 1
                foreground_color: 0, 0, 0, 1

        Button:
            text: 'Sing Up'
            font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
            font_size: 20
            color: 0, 0, 0, 1
            size_hint: None, None
            size: dp(160), dp(35)
            background_normal: 'kivy_app/assets/img/Rectangle_down.png'
            background_down: 'kivy_app/assets/img/Rectangle_normal.png'
            on_press: root.register(self)
            pos_hint: {'center_x': 0.5}

    BoxLayout:
        orientation: 'horizontal'
        size_hint: None, None
        size: dp(300), dp(30)
        spacing: dp(40)
        padding: [30, 10]
        pos_hint: {'center_x': 0.5}

        Label:
            text: 'Already have account?'
            font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
            font_size: 16
            size_hint_y: None
            height: self.texture_size[1]
            color: 0, 0, 0, 1

        Button:
            text: 'Sign in now'
            font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
            font_size: 16
            size_hint: None, None
            size: 90, 18
            color: 0, 0, 1, 1
            background_normal: ''
            background_color: 1, 1, 1, 1
            on_press: root.signin(self)
