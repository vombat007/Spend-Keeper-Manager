<RegistrationScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: 'vertical'
        padding: [dp(30), dp(50)]
        spacing: dp(15)
        size_hint: 0.9, 0.7
        pos_hint: {'center_x': 0.5, 'center_y': 0.7}

        Label:
            text: 'HI! \nCreate a \nNew account!'
            font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
            font_size: sp(30)
            size_hint_y: None
            height: self.texture_size[1]
            color: 0, 0, 0, 1
            bold: True
            halign: 'center'
            valign: 'middle'
            text_size: self.width, None

        BoxLayout:
            orientation: 'vertical'
            padding: [dp(10), dp(40)]
            spacing: dp(15)
            size_hint: 1, None
            height: self.minimum_height

            Label:
                id: error_label
                text: ''
                font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
                color: 1, 0, 0, 1
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, None
            height: self.minimum_height
            spacing: dp(5)

            Label:
                text: 'Email'
                font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
                size_hint_y: None
                height: dp(20)
                halign: 'left'
                color: 0, 0, 0, 1
                text_size: self.size
                padding_x: dp(25)

            TextInput:
                id: email_input
                hint_text: ''
                font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
                multiline: False
                size_hint_y: None
                size: dp(340), dp(55)
                padding_y: [dp(10), dp(10)]
                padding_x: [dp(10), dp(10)]
                font_size: sp(24)
                background_normal: 'kivy_app/assets/img/Rectangle.png'
                background_active: 'kivy_app/assets/img/Rectangle.png'
                background_color: 0.95, 0.95, 0.95, 1
                foreground_color: 0, 0, 0, 1


        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, None
            height: self.minimum_height
            spacing: dp(5)

            Label:
                text: 'Password'
                font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
                size_hint_y: None
                height: dp(20)
                color: 0, 0, 0, 1
                text_size: self.size
                padding_x: dp(25)

            TextInput:
                id: password_input
                hint_text: ''
                font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
                password: True
                multiline: False
                size_hint_y: None
                size: dp(340), dp(55)
                padding_y: [dp(10), dp(10)]
                padding_x: [dp(10), dp(10)]
                font_size: sp(24)
                background_normal: 'kivy_app/assets/img/Rectangle.png'
                background_active: 'kivy_app/assets/img/Rectangle.png'
                background_color: 0.95, 0.95, 0.95, 1
                foreground_color: 0, 0, 0, 1

        Button:
            text: 'Sign Up'
            font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
            font_size: sp(20)
            color: 0, 0, 0, 1
            size_hint: 0.5, None
            size: dp(300), dp(35)
            background_normal: 'kivy_app/assets/img/Rectangle_down.png'
            background_down: 'kivy_app/assets/img/Rectangle_normal.png'
            on_press: root.register(self)
            pos_hint: {'center_x': 0.5}

    BoxLayout:
        orientation: 'horizontal'
        size_hint: None, None
        size: dp(300), dp(30)
        spacing: dp(60)
        padding: [dp(30), dp(10)]
        pos_hint: {'center_x': 0.5}

        Label:
            text: 'Already have an account?'
            font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
            font_size: sp(16)
            size_hint_y: None
            height: self.texture_size[1]
            color: 0, 0, 0, 1

        Button:
            text: 'Sign in now'
            font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
            font_size: sp(16)
            size_hint: None, None
            size: dp(90), dp(18)
            color: 0, 0, 1, 1
            background_normal: ''
            background_color: 1, 1, 1, 1
            on_press: root.sign_in(self)
