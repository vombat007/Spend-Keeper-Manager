<AccountScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: 'horizontal'
        size_hint: None, None
        size: dp(45), dp(45)
        pos_hint: {'center_x': 0.1, 'center_y': 0.97}
        spacing: dp(40)

        Button:
            size_hint: None, None
            size: dp(45), dp(45)
            background_normal: 'kivy_app/assets/img/return_button_normal.png'
            background_down: 'kivy_app/assets/img/return_button_down.png'
            on_press: root.go_back(self)

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: "User Accounts"
            font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
            size_hint_y: None
            height: 50
            font_size: 20
            color: 0, 0, 0, 1  # Set text color to black

        ScrollView:
            RecycleView:
                id: account_list
                viewclass: 'Label'
                RecycleBoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    default_size: None, dp(48)
                    default_size_hint: 1, None

    BoxLayout:
        orientation: 'horizontal'
        size_hint: None, None
        size: dp(255), dp(50)
        spacing: dp(40)
        padding: [dp(30), dp(10)]
        pos_hint: {'center_x': 0.5}

        Button:
            text: "Create Account"
            font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
            color: 0, 0, 0, 1
            font_size: '24'
            size_hint_y: None
            size: dp(255), dp(50)
            background_normal: 'kivy_app/assets/img/Rectangle_normal.png'
            background_down: 'kivy_app/assets/img/Rectangle_down.png'
            on_release: root.open_create_account_popup()