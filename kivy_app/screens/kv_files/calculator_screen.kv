<CalculatorScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 40, 20, 20]
        spacing: 10

        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: '45dp', '45dp'

            Button:
                size_hint: None, None
                size: '45dp', '45dp'
                background_normal: 'kivy_app/assets/img/return_button_normal.png'
                background_down: 'kivy_app/assets/img/return_button_down.png'
                on_press: root.go_back(self)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Label:
            text: "Calculator"
            font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
            color: 0, 0, 0, 1
            font_size: 30
            halign: 'center'
            valign: 'middle'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Label:
            id: display
            text: root.display_text
            font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
            color: 0, 0, 0, 1
            font_size: 50
            halign: 'right'
            valign: 'middle'
            size_hint: 1, None
            height: '100dp'
            text_size: self.size

        GridLayout:
            cols: 4
            spacing: 5
            size_hint_y: None
            height: '350dp'

            Button:
                text: "C"
                on_press: root.clear()
                font_size: 24

            Button:
                text: "½"
                on_press: root.half()
                font_size: 24

            Button:
                text: "%"
                on_press: root.percent()
                font_size: 24

            Button:
                text: "÷"
                on_press: root.add_operator('/')
                font_size: 24

            Button:
                text: "7"
                on_press: root.add_number(7)
                font_size: 24
                background_color: 1, 1, 0, 1

            Button:
                text: "8"
                on_press: root.add_number(8)
                font_size: 24
                background_color: 1, 1, 0, 1

            Button:
                text: "9"
                on_press: root.add_number(9)
                font_size: 24
                background_color: 1, 1, 0, 1

            Button:
                text: "×"
                on_press: root.add_operator('*')
                font_size: 24

            Button:
                text: "4"
                on_press: root.add_number(4)
                font_size: 24
                background_color: 1, 1, 0, 1

            Button:
                text: "5"
                on_press: root.add_number(5)
                font_size: 24
                background_color: 1, 1, 0, 1

            Button:
                text: "6"
                on_press: root.add_number(6)
                font_size: 24
                background_color: 1, 1, 0, 1

            Button:
                text: "−"
                on_press: root.add_operator('-')
                font_size: 24

            Button:
                text: "1"
                on_press: root.add_number(1)
                font_size: 24
                background_color: 1, 1, 0, 1

            Button:
                text: "2"
                on_press: root.add_number(2)
                font_size: 24
                background_color: 1, 1, 0, 1

            Button:
                text: "3"
                on_press: root.add_number(3)
                font_size: 24
                background_color: 1, 1, 0, 1

            Button:
                text: "+"
                on_press: root.add_operator('+')
                font_size: 24

            Button:
                text: "0"
                on_press: root.add_number(0)
                font_size: 24
                size_hint_x: 2
                background_color: 1, 1, 0, 1

            Button:
                text: "."
                on_press: root.add_dot()
                font_size: 24

            Button:
                id: equals_button
                text: "="
                on_press: root.calculate()
                font_size: 24
