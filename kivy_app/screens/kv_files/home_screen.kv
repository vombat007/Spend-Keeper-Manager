#:import CircularChart kivy_app.widget.custom_chart.CircularChart

<HomeScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
    sidebar: sidebar_menu_id
    chart: chart_id
    FloatLayout:
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 1

        SidebarMenu:
            id: sidebar_menu_id
            size_hint: None, 1
            width: 250
            x: -self.width

        CustomSidebarButton:
            id: sidebar_toggle_button
            size_hint: None, None
            size: '54dp', '53dp'
            pos_hint: {'x': 0, 'y': 0.90}
            on_release: root.toggle_sidebar()

        Button:
            text: 'go_finance'
            font_size: 16
            size_hint: None, None
            size: 90, 18
            color: 0, 0, 1, 1
            background_normal: ''
            background_color: 1, 1, 1, 1
            on_press: root.go_finance(self)

    BoxLayout:
        orientation: 'vertical'
        padding: [50, 280]
        spacing: 15

        CircularChart:
            id: chart_id
            size_hint: None, None
            size: 300, 300
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    BoxLayout:
        orientation: 'horizontal'
        size_hint: None, None
        size: 300, 50
        pos_hint: {'center_x': 0.5, 'center_y': 0.1}
        spacing: 10

        Button:
            text: 'Day'
            size_hint: None, None
            size: 50, 50
            background_color: 1, 1, 0, 1
            on_release: root.set_period('day')

        Button:
            text: 'Week'
            size_hint: None, None
            size: 50, 50
            background_color: 1, 1, 0, 1
            on_release: root.set_period('week')

        Button:
            text: 'Month'
            size_hint: None, None
            size: 50, 50
            background_color: 1, 1, 0, 1
            on_release: root.set_period('month')

        Button:
            text: 'Year'
            size_hint: None, None
            size: 50, 50
            background_color: 1, 1, 0, 1
            on_release: root.set_period('year')

        Button:
            text: 'Period'
            size_hint: None, None
            size: 50, 50
            background_color: 1, 1, 0, 1
            on_release: root.set_period('period')
