<HomeScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
    sidebar: sidebar_menu_id
    FloatLayout:
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 1

        SidebarMenu:
            id: sidebar_menu_id
            size_hint: None, 1
            width: 250
            x: -self.width

        CustomSidebarButton:
            id: sidebar_toggle_button
            size_hint: None, None
            size: '54dp', '53dp'
            pos_hint: {'x': 0, 'y': 0.90}
            on_release: root.toggle_sidebar()
