<HomeScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
    sidebar: sidebar_menu_id
    BoxLayout:
        orientation: 'horizontal'

        SidebarMenu:
            id: sidebar_menu_id

        BoxLayout:
            orientation: 'vertical'

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: '50dp'
                padding: '10dp'

                Button:
                    text: 'â˜°'
                    size_hint_x: None
                    width: '50dp'
                    on_release: root.toggle_sidebar()

            BoxLayout:
                id: main_layout
                orientation: 'vertical'
                padding: 20
                spacing: 10

                Label:
                    id: balance_label
                    text: 'Main Balance: $0.00'
                    color: 0, 0, 0, 1
                    font_size: 24

                Label:
                    id: expenses_label
                    text: 'Expenses: $0.00'
                    color: 0, 0, 0, 1
                    font_size: 18

                Label:
                    id: income_label
                    text: 'Income: $0.00'
                    color: 0, 0, 0, 1
                    font_size: 18
