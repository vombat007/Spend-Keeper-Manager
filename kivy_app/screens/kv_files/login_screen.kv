<LoginScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        padding: [30, 50]
        spacing: 15

        Image:
            source: 'kivy_app/assets/img/guinea_pigs.png'
            size_hint: None, None
            size: 200, 200
            pos_hint: {'center_x': 0.5}

        Label:
            text: 'Ready to tame your finances?'
            font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
            font_size: 30
            size_hint_y: None
            height: self.texture_size[1]
            color: 0, 0, 0, 1
            bold: True
            halign: 'center'

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 300, 100  # Adjusted the height here
            spacing: 5
            pos_hint: {'center_x': 0.5}

            Label:
                text: 'Email'
                font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
                size_hint_y: None
                height: 20  # Fixed height value
                halign: 'left'
                color: 0, 0, 0, 1
                text_size: self.size

            TextInput:
                id: email_input
                hint_text: ''
                font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
                multiline: False
                size_hint_y: None
                height: 50
                padding_y: [10, 10]
                font_size: 18
                background_normal: 'kivy_app/assets/img/Rectangle.png'
                background_color: 0.95, 0.95, 0.95, 1
                foreground_color: 0, 0, 0, 1

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 300, 70  # Adjusted the height here
            spacing: 5
            pos_hint: {'center_x': 0.5}

            Label:
                text: 'Password'
                font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
                size_hint_y: None
                height: 20  # Fixed height value
                color: 0, 0, 0, 1
                text_size: self.size

            TextInput:
                id: password_input
                hint_text: ''
                font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
                password: True
                multiline: False
                size_hint_y: None
                height: 50
                padding_y: [10, 10]
                font_size: 18
                background_normal: 'kivy_app/assets/img/Rectangle.png'
                background_color: 0.95, 0.95, 0.95, 1
                foreground_color: 0, 0, 0, 1

        Button:
            text: 'Forgot password?'
            font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
            size_hint: None, None
            size: 150, 30
            font_size: 14
            color: 0, 0, 0, 1
            background_normal: ''
            background_color: 1, 1, 1, 1
            on_press: root.forgot_password(self)
            pos_hint: {'center_x': 0.5}




        Button:
            size_hint: None, None
            size: 200, 40
            background_normal: 'kivy_app/assets/img/small_login_button.png'
            background_down: 'kivy_app/assets/img/small_login_button.png'
            on_press: root.login(self)
            pos_hint: {'center_x': 0.5}

        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: 300, 30  # Adjusted the height here
            spacing: 5
            pos_hint: {'center_x': 0.5}

            Label:
                text: 'Dont have account?'
                font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
                font_size: 16
                size_hint_y: None
                height: self.texture_size[1]
                color: 0, 0, 0, 1

            Button:
                text: 'Sign up now'
                font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
                font_size: 16
                size_hint: None, None
                size: 90, 18
                color: 0, 0, 1, 1
                background_normal: ''
                background_color: 1, 1, 1, 1
                on_press: root.signup(self)

        Button:
            text: 'Back'
            font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
            font_size: 20
            size_hint: None, None
            size: 200, 50
            color: 0, 0, 0, 1
            background_normal: ''
            background_color: 1, 1, 1, 1
            on_press: root.go_back(self)
            pos_hint: {'center_x': 0.5}

        Label:
            id: error_label
            text: ''
            color: 1, 0, 0, 1
            size_hint_y: None
            height: self.texture_size[1]
            pos_hint: {'center_x': 0.5}
