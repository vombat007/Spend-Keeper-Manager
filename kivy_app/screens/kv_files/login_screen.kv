<LoginScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        padding: [30, 50]
        spacing: 15

        Image:
            source: 'kivy_app/assets/img/frames/frame_3.png'
            size_hint: None, None
            size: dp(200), dp(200)
            pos_hint: {'center_x': 0.5}

        Label:
            text: 'Ready to tame \nYour finances?'
            font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
            font_size: dp(30)
            size_hint_y: None
            height: self.texture_size[1]
            color: 0, 0, 0, 1
            bold: True
            halign: 'center'

        Label:
            id: error_label
            text: ''
            font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
            color: 1, 0, 0, 1
            size_hint_y: None
            height: self.texture_size[1]
            pos_hint: {'center_x': 0.5}

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: dp(300), dp(40)
            spacing: dp(5)
            pos_hint: {'center_x': 0.5}

            Label:
                text: 'Email'
                font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
                size_hint_y: None
                height: dp(20)
                halign: 'left'
                color: 0, 0, 0, 1
                text_size: self.size
                padding_x: dp(25)  # Adjust padding to move text to the right

            TextInput:
                id: email_input
                hint_text: ''
                font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
                multiline: False
                size_hint_y: None
                height: dp(45)
                padding_y: [dp(10), dp(10)]
                padding_x: [dp(10), dp(10)]
                font_size: sp(18)
                background_normal: 'kivy_app/assets/img/Rectangle.png'
                background_active: 'kivy_app/assets/img/Rectangle.png'
                background_color: 0.95, 0.95, 0.95, 1
                foreground_color: 0, 0, 0, 1

        Widget:
            size_hint_y: None
            height: dp(20)  # Height of the space between email and password fields

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: dp(300), dp(70)
            spacing: dp(5)
            pos_hint: {'center_x': 0.5}

            Label:
                text: 'Password'
                font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
                size_hint_y: None
                height: dp(20)
                color: 0, 0, 0, 1
                text_size: self.size
                padding_x: dp(25)  # Adjust padding to move text to the right

            TextInput:
                id: password_input
                hint_text: ''
                font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
                password: True
                multiline: False
                size_hint_y: None
                height: dp(45)
                padding_y: [dp(10), dp(10)]
                padding_x: [dp(10), dp(10)]
                font_size: sp(18)
                background_normal: 'kivy_app/assets/img/Rectangle.png'
                background_active: 'kivy_app/assets/img/Rectangle.png'
                background_color: 0.95, 0.95, 0.95, 1
                foreground_color: 0, 0, 0, 1

            Button:
                text: 'Forgot password?'
                font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
                size_hint: None, None
                size: dp(150), dp(30)
                font_size: sp(14)
                color: 0, 0, 0, 1
                background_normal: ''
                background_color: 1, 1, 1, 1
                on_press: root.forgot_password(self)
                halign: 'right'
                valign: 'middle'
                pos_hint: {'center_x': 0.5}  # Adjust position to move button closer to password field

        Button:
            size_hint: None, None
            size: dp(140), dp(40)
            text: 'Login?'
            color: 0, 0, 0, 1
            font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
            font_size: sp(24)
            background_normal: 'kivy_app/assets/img/Rectangle_down.png'
            background_down: 'kivy_app/assets/img/Rectangle_normal.png'
            on_press: root.login(self)
            pos_hint: {'center_x': 0.5}

        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: dp(300), dp(30)
            spacing: dp(5)
            pos_hint: {'center_x': 0.5}

            Label:
                text: "Don't have account?"
                font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
                font_size: sp(16)
                size_hint_y: None
                height: self.texture_size[1]
                color: 0, 0, 0, 1

            Button:
                text: 'Sign up now'
                font_name: 'kivy_app/assets/fonts/IrishGrover-Regular.ttf'
                font_size: sp(16)
                size_hint: None, None
                size: dp(90), dp(18)
                color: 0, 0, 1, 1
                background_normal: ''
                background_color: 1, 1, 1, 1
                on_press: root.signup(self)
