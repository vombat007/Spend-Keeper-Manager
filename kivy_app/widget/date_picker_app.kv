<DatePicker>:
    size_hint: None, None
    size: '350dp', '425dp'
    pos_hint: {'center_x': 0.5, 'center_y': 0.64}
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 2
            rounded_rectangle: self.x, self.y, self.width, self.height, 20, 20, 20, 20
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20,]

    BoxLayout:
        id: main_layout
        orientation: 'vertical'
        padding: ['10dp', '10dp', '10dp', '10dp']
        spacing: '10dp'
        size_hint: (1, 1)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        BoxLayout:
            id: header
            orientation: 'horizontal'
            size_hint: (1, 0.15)
            padding: ['10dp', 0]
            spacing: '10dp'

            Button:
                id: prev_button
                size_hint: None, None
                size: '45dp', '32dp'
                background_normal: 'kivy_app/assets/img/Button_arrow_left_normal.png'
                background_down: 'kivy_app/assets/img/Button_arrow_left_down.png'

            Label:
                id: month_year_label
                size_hint: None, None
                size: '200dp', '30dp'
                font_size: '24sp'  # Adjust font size here
                color: 0, 0, 0, 1

            Button:
                id: next_button
                size_hint: None, None
                size: '45dp', '32dp'
                background_normal: 'kivy_app/assets/img/Button_arrow_right_normal.png'
                background_down: 'kivy_app/assets/img/Button_arrow_right_down.png'

        GridLayout:
            id: body
            cols: 7
            spacing: ['5dp', '1dp']
            padding: ['10dp', '10dp']
            size_hint: (1, 0.65)

        BoxLayout:
            id: footer
            orientation: 'horizontal'
            size_hint: (1, 0.2)
            padding: ['10dp', 0]
            spacing: '10dp'

            Button:
                text: 'Cancel'
                font_size: '20sp'
                size_hint: None, None
                size: '120dp', '40dp'
                background_normal: ''
                background_down: 'kivy_app/assets/img/Rectangle_normal.png'
                background_color: (1, 1, 1, 1)
                color: (0, 0, 0, 1)
                on_press: root.cancel(self)

            Widget:
                size_hint: 1, 1  # Spacer

            Button:
                id: done_button
                text: 'Done'
                font_size: '20sp'
                size_hint: None, None
                size: '120dp', '40dp'
                background_normal: 'kivy_app/assets/img/Rectangle_down.png'
                background_down: 'kivy_app/assets/img/Rectangle_normal.png'
                background_disabled_normal: ''
                background_disabled_down: ''
                disabled_color: 1, 1, 1, 1
                background_color: (1, 1, 1, 1)
                color: (0, 0, 0, 1)
                on_press: root.done(self)
                disabled: True  # Initially disable the button
