<DatePicker>:
    size_hint: None, None
    size: 350, 400
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 2
            rounded_rectangle: self.x, self.y, self.width, self.height, 20, 20, 20, 20
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20,]

    BoxLayout:
        id: main_layout
        orientation: 'vertical'
        padding: [10, 10, 10, 10]
        spacing: 10
        size_hint: (1, 1)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        BoxLayout:
            id: header
            orientation: 'horizontal'
            size_hint: (1, 0.15)
            padding: [10, 0]
            spacing: 10

            Button:
                id: prev_button
                size_hint: None, None
                size: 45, 32
                background_normal: 'Button_arrow_left_normal.png'
                background_down: 'Button_arrow_left_down.png'

            Label:
                id: month_year_label
                size_hint: None, None
                size: 200, 30
                color: 0, 0, 0, 1

            Button:
                id: next_button
                size_hint: None, None
                size: 45, 32
                background_normal: 'Button_arrow_right_normal.png'
                background_down: 'Button_arrow_right_down.png'

        GridLayout:
            id: body
            cols: 7
            spacing: [0, 0]
            padding: [10, 10]
            size_hint: (1, 0.65)

        BoxLayout:
            id: footer
            orientation: 'horizontal'
            size_hint: (1, 0.2)
            padding: [10, 0]
            spacing: 10

            Button:
                text: 'Cancel'
                font_size: 20
                size_hint: None, None
                size: 115, 35
                background_normal: ''
                background_down: 'Rectangle_normal.png'
                background_color: (1, 1, 1, 1)
                color: (0, 0, 0, 1)
                on_press: root.cancel(self)

            Widget:
                size_hint: 1, 1  # Spacer

            Button:
                text: 'Done'
                font_size: 20
                size_hint: None, None
                size: 115, 35
                background_normal: 'Rectangle_down.png'
                background_down: 'Rectangle_normal.png'
                background_color: (1, 1, 0, 1)
                color: (0, 0, 0, 1)
                on_press: root.done(self)
