<DatePicker>:
    size_hint: None, None
    size: 350, 400
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20,]

    BoxLayout:
        id: main_layout
        orientation: 'vertical'
        padding: [10, 10, 10, 10]
        spacing: 10
        size_hint: (1, 1)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        BoxLayout:
            id: header
            orientation: 'horizontal'
            size_hint: (1, 0.15)
            padding: [10, 0]
            spacing: 10

        GridLayout:
            id: body
            cols: 7
            spacing: [5, 5]
            padding: [10, 10]
            size_hint: (1, 0.65)

        BoxLayout:
            id: footer
            orientation: 'horizontal'
            size_hint: (1, 0.2)
            padding: [10, 0]
            spacing: 10

<HeaderButton@Button>:
    font_size: 24
    size_hint: (None, None)
    size: (40, 40)
    background_color: (0.9, 0.9, 0.9, 1)
    color: (0, 0, 0, 1)
    background_normal: ''
    background_down: ''
    canvas.before:
        Color:
            rgba: 0.9, 0.9, 0.9, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10,]

<DateButton@Button>:
    font_size: 18
    size_hint: (None, None)
    size: (40, 40)
    background_color: (1, 1, 1, 1)
    color: (0, 0, 0, 1)
    background_normal: ''
    background_down: ''
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10,]

<FooterButton@Button>:
    font_size: 18
    size_hint: (None, None)
    size: (120, 40)
    background_color: (1, 1, 0, 1)
    color: (0, 0, 0, 1)
    background_normal: ''
    background_down: ''
    canvas.before:
        Color:
            rgba: 1, 1, 0, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10,]
